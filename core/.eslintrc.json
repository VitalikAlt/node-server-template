{
    "plugins": ["node", "async-await"],
    "extends": ["eslint:recommended", "plugin:node/recommended", "esnext", "plugin:import/errors", "plugin:import/warnings"],
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "node/exports-style": ["error", "module.exports"],
        "import/no-common-js": 0,
        "import/no-commonjs": 0,
        "node/no-unpublished-require": 0,
        "no-console": 0,
        "import/no-nodejs-modules": 0,
        "node/process-exit-as-throw": 0,
        "no-process-exit": 0,
        "node/no-unsupported-features": 1,
        "no-unreachable": 1,

        "prefer-const": 0,
        "no-unused-vars": ["warn", { "args": "none" }],

        "no-new": 0,

        "no-throw-literal": 0,
        "class-methods-use-this": 0,
        "arrow-body-style": 1,

        "no-useless-constructor": 0,
        "array-callback-return": 0,

        "eqeqeq": ["error", "smart"],
        "no-empty-function": 0,

        "require-yield": 0,
        "no-useless-call": 0
    },
    "globals": {
        "p": true,
        "appRoot": true,
        "https_protocol": true,
        "withPostgres": true,
        "core": true
    }
}